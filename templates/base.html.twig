<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="stylesheet" href="{{asset('assets/css/bootstrap.css')}}">


	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
			<div class="container">
				<a class="navbar-brand" href="#">SymBook</a>
				{# <button c   lass="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
																																             <span class="navbar-toggler-icon"></span> 																												            </button> #}
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						{% if app.user %}
							{% if  is_granted('ROLE_ADMIN') == false %}
								<li class="nav-item">
									<a class="nav-link active" href="{{url('app_client')}}">Home
										<span class="visually-hidden">(current)</span>
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_commande_all')}}">My orders</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_livres')}}">books</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_categorie_auto_index')}}">categories</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_utilisateur_index')}}">users</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_admin_orders')}}">orders</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_dashboard')}}">dashboard</a>
								</li>
							{% endif %}
						{% else %}
							<li class="nav-item">
								<a class="nav-link active" href="{{url('app_client')}}">Home
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
						{% endif %}
					</ul>
					<ul class="navbar-nav ms-auto">
						{% if app.user %}
							{% if is_granted('ROLE_ADMIN') == false %}
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_panier')}} ">cart</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{url('app_profile')}} ">profile</a>
								</li>
							{% endif %}
							
							<li class="nav-item ">
								<a class="nav-link" href="{{url('app_logout')}}">Logout </a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{url('app_register')}}">sign up</a>
							</li>
							<li class="nav-item ">
								<a class="nav-link" href="{{url('app_login')}}">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{url('app_panier')}} ">cart</a>
							</li>
						{% endif %}
					</ul>
				</div>

			</div>
		</nav>
		{% for message in app.flashes('success') %}
			<div class="alert-success">
				<center>
					{{message}}
				</center>
			</div>
		{% endfor %}

		<div class="container mt-3"> {% block body %}{% endblock %}
			</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		</body>

	</html>
